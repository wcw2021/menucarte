{% extends 'base.html.twig' %}

{% block title %}Liste{% endblock %}

{% block body %}
<br>
<div class="container">
    <h1>Liste</h1>
    <br>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ liste.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ liste.name }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ liste.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ liste.phone }}</td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-warning mr-2" href="{{ path('liste_edit', {'id': liste.id}) }}">edit</a>
    <a class="btn btn-outline-secondary" href="{{ path('liste_index') }}">back to list</a>
    <br><br>

    {{ include('liste/_delete_form.html.twig') }}
</div>
{% endblock %}
